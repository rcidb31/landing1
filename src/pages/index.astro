							    function updateGradients(element: HTMLElement) {
							      const gradientLeft = document.getElementById('gradient-left');
							      const gradientRight = document.getElementById('gradient-right');
							      
							      if (!gradientLeft || !gradientRight) return;
							      
							      const scrollLeft = element.scrollLeft;
							      const scrollWidth = element.scrollWidth;
							      const clientWidth = element.clientWidth;
							      const maxScroll = scrollWidth - clientWidth;
							      
							      // Mostrar gradiente izquierdo si hay scroll a la izquierda
							      if (scrollLeft > 10) {
							        gradientLeft.style.opacity = '1';
							      } else {
							        gradientLeft.style.opacity = '0';
							      }
							      
							      // Mostrar gradiente derecho si hay m√°s contenido a la derecha
							      if (scrollLeft < maxScroll - 10) {
							        gradientRight.style.opacity = '1';
							      } else {
							        gradientRight.style.opacity = '0';
							      }
							    }
							    
							    // Inicializar gradientes y funcionalidad de drag al cargar
							    document.addEventListener('DOMContentLoaded', function() {
							      const slider = document.getElementById('slider-scroll') as HTMLElement;
							      if (!slider) return;
							      
							      updateGradients(slider);
							      // Actualizar tambi√©n al redimensionar
