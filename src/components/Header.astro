<header class="header">
    <nav class="w-full px-5 py-1 flex justify-between items-center bg-gray-900 shadow-md fixed top-0 left-0 z-50">
        <!-- Logo -->
        <div>
            <img src="/logo3.png" alt="Logo" class="w-20 h-20 sm:w-24 sm:h-24 lg:w-32 lg:h-32" />
        </div>
    
        <!-- Botón burger (visible en pantallas pequeñas) -->
        <div class="lg:hidden ml-auto">
            <button id="burger" class="text-white focus:outline-none" aria-label="Toggle menu" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>
    
        <!-- Menú de escritorio (visible en pantallas grandes) -->
        <div class="hidden lg:flex mr-4">
            <ul class="space-x-5 list-none m-0 flex items-center">
                <li><a href="#logo" class="text-white hover:text-gray-400 transition-all duration-500 ease-in-out">Home</a></li>
                <li><a href="#aboutme" class="text-white hover:text-gray-400 transition-all duration-500 ease-in-out">About</a></li>
                <li><a href="#pro" class="text-white hover:text-gray-400 transition-all duration-500 ease-in-out">Projects</a></li>
                <li><a href="#closing" class="text-white hover:text-gray-400 transition-all duration-500 ease-in-out">Contact</a></li>
            </ul>
        </div>
    
        <!-- Menú móvil (visible solo en pantallas pequeñas al hacer clic) -->
        <div id="mobileMenu" class="lg:hidden hidden absolute top-16 right-4 w-48 bg-gray-800 rounded-lg p-4 shadow-lg transition-all duration-300">
            <ul class="flex flex-col space-y-4">
                <li><a href="#logo" class="text-white hover:text-gray-400 transition-all duration-300">Home</a></li>
                <li><a href="#aboutme" class="text-white hover:text-gray-400 transition-all duration-300">About</a></li>
                <li><a href="#pro" class="text-white hover:text-gray-400 transition-all duration-300">Projects</a></li>
                <li><a href="#closing" class="text-white hover:text-gray-400 transition-all duration-300">Contact</a></li>
            </ul>
        </div>
    </nav>
</header>
